<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".configure">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:background="#FFFFFF"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/boy" />
        </LinearLayout>

        <TextView
            android:id="@+id/Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="USER"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:padding="2dp"
            android:text="Pick your avatar"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/boy"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="#951976D2"
                    app:srcCompat="@drawable/boy" />

                <ImageView
                    android:id="@+id/btw"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    app:srcCompat="@drawable/btw" />

                <ImageView
                    android:id="@+id/girl"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    app:srcCompat="@drawable/girl" />

                <ImageView
                    android:id="@+id/gtw"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    app:srcCompat="@drawable/gtw" />

                <ImageView
                    android:id="@+id/man"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    app:srcCompat="@drawable/man" />

                <ImageView
                    android:id="@+id/manfive"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    app:srcCompat="@drawable/manfive" />

                <ImageView
                    android:id="@+id/manth"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    app:srcCompat="@drawable/manth" />

                <ImageView
                    android:id="@+id/mantw"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    app:srcCompat="@drawable/mantw" />

                <ImageView
                    android:id="@+id/mfo"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    app:srcCompat="@drawable/mfo" />

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="8dp"
            android:text="Date of birth"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ems="10"
            android:hint="DD/MM/YYYY"
            android:inputType="date" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="Bio"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Write something about you...."
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="2dp"
            android:background="@color/colorPrimaryDark"
            android:text="Next"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>